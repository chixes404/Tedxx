@page
@model LoginModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Log in";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
<style>
    .form-floating .form-control::placeholder {
        color: black; /* Set the placeholder text color */
        opacity: 1; /* Ensure placeholder text is fully visible */
    }

    .form-floating label {
        display: none !important; /* Completely hide the floating label */
    }

    .form-control:focus {
        background-color: white !important; /* Keep the input background white on focus */
        outline: none; /* Remove default outline */
    }
</style>

<div class="row">
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="col-md-4">
            <h1 class="text-center" style="color: #c80022">قم بتسجيل الدخول لحسابك</h1>
            <br />
            <br />
            <section>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <!-- Email Field -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="الرجاء ادخال الايميل " />
                        <label asp-for="Input.Email">Email</label> <!-- Label hidden via CSS -->
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <!-- Password Field with Toggle Button -->
                    <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="الرجاي ادخال الرقم السري" type="password" id="passwordInput" />
                         
                        <label asp-for="Input.Password">Password</label> <!-- Label hidden via CSS -->
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <!-- Submit Button -->
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">تسجيل لدخول</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
