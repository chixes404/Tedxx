@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@model Tedx.Models.User


<main class="content content_register">
    <!-- Start banner section -->
    <section class="content_banner content_terms text-center w-100 position-relative" id="myHeader">
        <img src="~/assets/imgs/head-bg.png" class="w-100" alt="banner" />
        <div class="caption text-center px-sm-5 px-3">
            <h3 class="fw-bold fs-2 text-light mb-0">
                <img src="~/assets/imgs/شعار-ابن-رشد-1.png" />
            </h3>
        </div>
    </section>
    <!-- End banner section -->
    <!-- Start content section -->
    <section class="content_infoTxt py-5">
        <div class="container">
            <form>
                <div class="mb-3">
                    <div class="d-flex">
                        <label class="ng-binding">الاسم كامل</label>
                        <div class="requ text-danger">*</div>
                    </div>
                    <input type="text"
                           class="form-control"
                           placeholder="أدخل هنا |"
                           value="" />
                </div>
                <div class="mb-3">
                    <div class="d-flex">
                        <label class="ng-binding">العمر </label>
                        <div class="requ text-danger">*</div>
                    </div>
                    <input type="number"
                           class="form-control"
                           placeholder="أدخل هنا |"
                           value="" />
                </div>
                <div class="mt-5 mb-3">
                    <div class="form-check form-check-inline p-0 m-0">
                        <label class="form-check-label">الانضمام كـ: </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input"
                               type="radio"
                               name="inlineRadioOptions"
                               id="inlineRadio1"
                               value="option1" />
                        <label class="form-check-label" for="inlineRadio1">متحدث</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input"
                               type="radio"
                               name="inlineRadioOptions"
                               id="inlineRadio2"
                               value="option2"
                               checked />
                        <label class="form-check-label" for="inlineRadio2">مستمع</label>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex">
                        <label class="ng-binding">الوظيفة </label>
                        <div class="requ text-danger">*</div>
                    </div>
                    <input type="number"
                           class="form-control"
                           placeholder="أدخل هنا |"
                           value="" />
                </div>
                <div class="listener">
                    <div class="mb-3">
                        <div class="d-flex">
                            <label class="ng-binding">الايميل</label>
                            <div class="requ text-danger">*</div>
                        </div>
                        <input type="email"
                               class="form-control"
                               placeholder="أدخل هنا |"
                               value="" />
                    </div>
                    <div class="mb-3">
                        <div class="d-flex">
                            <label class="ng-binding">الجوال</label>
                            <div class="requ text-danger">*</div>
                        </div>
                        <input type="tel"
                               class="form-control"
                               placeholder="أدخل هنا |"
                               value="" />
                    </div>
                </div>
                <div class="mb-3 speaker">
                    <div class="d-flex">
                        <label class="ng-binding">تصنيف الفكرة</label>
                        <div class="requ text-danger">*</div>
                    </div>
                    <select class="form-select" aria-label="Default select example">
                        <option selected></option>
                        <option value="1">اختيار 1</option>
                        <option value="2">اختيار 2</option>
                    </select>
                </div>
                <div class="mb-3 speaker">
                    <div class="d-flex">
                        <label class="ng-binding">اشرح الفكرة في ١٠٠-٣٠٠ كلمة</label>
                        <div class="requ text-danger">*</div>
                    </div>
                    <textarea class="form-control"
                              placeholder="أدخل هنا |"
                              rows="3"></textarea>
                </div>
                <div class="mb-3 speaker">
                    <div class="d-flex">
                        <label class="ng-binding">لماذا فكرتك تستحق الظهور ؟</label>
                        <div class="requ text-danger">*</div>
                    </div>
                    <textarea class="form-control"
                              placeholder="أدخل هنا |"
                              rows="3"></textarea>
                </div>
                <div class="mb-3 speaker">
                    <div class="d-flex">
                        <label class="ng-binding">هل قدمت على المسرح من قبل؟</label>
                        <div class="requ text-danger">*</div>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input"
                               type="radio"
                               name="flexRadioDefault"
                               id="flexRadioDefault1" />
                        <label class="form-check-label" for="flexRadioDefault1">
                            نعم
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input"
                               type="radio"
                               name="flexRadioDefault"
                               id="flexRadioDefault2"
                               checked />
                        <label class="form-check-label" for="flexRadioDefault2">
                            لا
                        </label>
                    </div>
                </div>
                <div class="form-btns d-flex align-items-center justify-content-center">
                    <button type="button"
                            class="btn btn-primary text-light rounded-0 text-uppercase mt-4 px-2 mx-2"
                            data-bs-toggle="modal"
                            data-bs-target="#confirmModal"
                            onclick="setTimeout(function() {$('#confirmModal').modal('hide');}, 2500);">
                        التالي
                    </button>
                    <button type="button"
                            class="btn btn-outline-primary text-light rounded-0 text-uppercase mt-4 px-2 mx-2"
                            onclick="location.href = '';">
                        إلغاء
                    </button>
                </div>
            </form>
        </div>
    </section>
    <!-- End content section -->
</main>